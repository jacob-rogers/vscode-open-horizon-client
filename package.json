{
  "name": "open-horizon-client",
  "displayName": "Open Horizon client",
  "description": "Make easy to manage services, edge nodes and deployment configurations for Open Horizon projects",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jacob-rogers/vscode-open-horizon-client"
  },
  "homepage": "https://github.com/jacob-rogers/vscode-open-horizon-client/blob/main/README.md",
  "main": "./dist/extension.js",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "activationEvents": [
    "onStartupFinished",
    "onView:horizonExplorer"
  ],
  "contributes": {
    "commands": [
      {
        "command": "open-horizon-client.setupConnectionSettings",
        "title": "Setup connection settings",
        "category": "%open-horizon-client.categories.openHorizon%",
        "icon": "$(gear)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Open Horizon",
      "order": 2,
      "properties": {
        "openHorizon.hznCliBinaryLocation": {
          "type": "string",
          "default": "/usr/local/bin/hzn",
          "description": "HZN CLI binary location. Default is /usr/local/bin/hzn",
          "scope": "resource"
        },
        "openHorizon.connSettingsProvided": {
          "type": "boolean",
          "default": false,
          "description": "Whether connection settings were provided or not. Default is false.",
          "scope": "resource"
        }
      }
    },
    "languages": [
      {
        "id": "servicedef",
        "aliases": [
          "Open Horizon service definition"
        ],
        "filenamePatterns": [
          "*service.definition.json"
        ]
      }
    ],
    "views": {
      "openHorizonView": [
        {
          "id": "horizonExplorer",
          "name": "Horizon Explorer",
          "when": "config.openHorizon.connSettingsProvided == true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "$(circuit-board)",
          "id": "openHorizonView",
          "title": "%open-horizon-client.views.activityBar%"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "open-horizon-client.showServiceStatus",
          "when": "view == horizonExplorer && viewItem == service",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/got": "^9.6.12",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/shelljs": "^0.8.9",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "got": "^12.0.0",
    "shelljs": "^0.8.4",
    "vscode-nls": "^5.0.0"
  }
}
